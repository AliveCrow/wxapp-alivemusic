/* pages/User/index/index.wxss */

.user-home {
  height: 100vh;
  overflow: auto;
}

.layout-card {
  height: 160px;
  border-radius: 10px;
  color: #fff;
  overflow: hidden;
}

.my-favorites {
  display: flex;
  flex-direction: row;
}

.favorites {
  flex-grow: 1;
  margin: 10px;
  border-radius: 5px;
  color: #fff;
  font-weight: 300;
  text-align: center;
  line-height: 60px;
  font-size: 18px;
  height: 60px;
}

.song {
  background: #2c3e50;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #3498db, #2c3e50);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #3498db, #2c3e50); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  background-size: cover;
  
}

.song-list {
  background: #3498db;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #2c3e50, #3498db);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #2c3e50, #3498db); 
  background-size: cover;
}

.user-info {
  min-width: calc(100% - 20px);
  margin: 10px!important;
  padding: 0!important;
  background: #673AB7;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #512DA8, #673AB7);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #512DA8, #673AB7); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  background-size: cover;
  background-position: center center;
  position: relative;
}

.login {
  height: 30px;
  color: #000;
  line-height: 30px;
  text-align: center;
  font-size: 10px;
  margin: 10px 50px;
  border: 1px solid red;
  border-radius: 5px;
}

.username{
  font-size: 35px;
  font-weight: 300;
  margin: 20px;
  text-align: left;
}

.login-type{
  position: absolute;
  font-size: 14px;
  font-weight: 300;
  margin: 20px;
  bottom: 0;
}
.is-vip{
  position: absolute;
  font-size: 14px;
  font-weight: 300;
  margin: 20px;
  bottom: 0;
  right: 0;
}


.grayscale{
  filter: grayscale(100%);
}