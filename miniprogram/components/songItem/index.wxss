/* components/songItem/index.wxss */

.song-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 100vw;
}

.song-image {
  height: 55px;
  width: 55px;
  border-radius: 5px;
  margin: 5px;
  flex: 0 0 55px
}

.song-detail {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.song-name {
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.song-album {
  font-size: 12px;
  color: #c0c0c0;
}

.more {
  height: 20px;
  width: 20px;
}