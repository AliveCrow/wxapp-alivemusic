/* components/scrollItem/index.wxss */
.scroll-item {
  height: 110px;
  display: inline-block;
  margin: 0 5px;
  width: 110px;
}

.scroll-image {
  height: 110px;
  width: 110px;
  border-radius: 5px;
}

.img-sub {
  position: absolute;
  bottom: 0;
  padding: 0 5px;
  background-color: #000;
  color: #fff;
  opacity: .6;
  right: 0;
  font-size: 8px;
  margin-bottom: 4px;
  margin-right: 4px;
  border-radius: 2px;
}
.songlist-detail{
  text-align: center;
  font-size: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}